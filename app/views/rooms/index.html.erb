<div class="row">
  <div class="col-12 col-md-3">
    <div class="mb-3">
      <%= link_to 'Create A Room', new_room_path %>
    </div>

    <% if @rooms.present? %>
      <nav class="nav flex-column">
        <% @rooms.each do |room| %>
          <%= link_to room.name, room_path(room), class: "nav-link room-nav-link" %>
        <% end %>
      </nav>
    <% else %>
      <div class="text-muted">
        There are no rooms! Start some and get chatting!
      </div>
    <% end %>
  </div>

  <div class="col">
    <div class="alert alert-primary">
      <h4 class="alert-heading">
        Welcome to Chatterbox!
      </h4>
      <p>
        Create or join a room from the sidebar.
      </p>
    </div>
  </div>
</div>